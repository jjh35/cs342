<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="FantasyLeagueResource" transaction-type="JTA">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>models.FantasyLeague</class>
        <class>models.MatchUp</class>
        <class>models.Player</class>
        <class>models.PlayerScore</class>
        <class>models.UserProfile</class>
        <class>models.UserTeam</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
            <property name="eclipselink.jdbc.driver" value="oracle.jdbc.OracleDriver"/>
            <property name="eclipselink.jdbc.user" value="user1"/>
            <property name="eclipselink.jdbc.password" value="Kevin"/>
        </properties>
    </persistence-unit>
</persistence>
